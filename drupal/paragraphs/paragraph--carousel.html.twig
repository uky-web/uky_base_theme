{{ attach_library('ukd8/carousel') }}
{% if editorial_column %}
  {% set schema = '' %}
{% else %}
  {% set schema = paragraph.field_theme_color_scheme|length?  paragraph.field_theme_color_scheme.value : theme_settings.scheme_settings.paragraph__carousel.value %}
{% endif %}
{% set center = (paragraph.field_theme_carousel_centered|length and paragraph.field_theme_carousel_centered.value)? paragraph.field_theme_carousel_centered.value : theme_settings.layout_boolean_settings.paragraph__carousel__center.value %}
{% include 'components-carousel-slab' with {
  headline: content.field_headline_group,
  body: content.field_body,
  figures: content.field_collection_items|children,
  carousel_style: center? 'carousel--center',
  slab_variant: {'white': 'slab--wildcat-white', 'gray': 'slab--dark-gray', 'dark': 'slab--dark-blue', 'wildcat': 'slab--wildcat-blue'}[schema],
} %}