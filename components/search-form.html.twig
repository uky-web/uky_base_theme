{% set searchid = "search-keywords"|uniqid %}
<form class="search" id="search-form" method="get" action="/search/node">
  <label for="{{ searchid }}">Search our Site</label>
  <div class="control-group">
    <input type="text" name="q" id="{{ searchid }}" />
    <button class="icon-only">
      {% include 'atoms-icon-label' with { icon: 'magnify', label: 'search' } %}
    </button>
  </div>
</form>

<script>
document.getElementById("search-form").addEventListener("submit", function (event) {
    // Prevent the form from being submitted
    event.preventDefault();
    
    var searchId = "{{ searchid }}";
    var searchTerm = document.getElementById(searchId).value.trim();
    
    if (searchTerm !== "") {
        window.location.href = this.action + "?keys=" + encodeURIComponent(searchTerm);
    }
});
</script>