{% embed 'molecules-slab' with { slab_variant : slab_variant|default('slab--wildcat-white')} %}
    {% block slab_content %}
        {{ headline }}
        {{ body }}
        {% include 'molecules-carousel' with { 
            level: 3, 
            linked: true, 
            carousel_variant : carousel_variant, 
            carousel_layout: carousel_layout,
            figures: figures,
        } %} 
    {% endblock %}
{% endembed %}